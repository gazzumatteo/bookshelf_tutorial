<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duckma.bookshelftutorial">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/AppTheme">

        <!--Dichiarazione dell'Activity-->
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <!--permette di identifcare le azioni che Ã¨ in grado di compiere -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.BookAddActivity"
            android:label="@string/app_add_book_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
