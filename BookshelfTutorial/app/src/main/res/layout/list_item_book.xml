<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/padding_Item_Book"
        android:paddingRight="@dimen/padding_Item_Book"
        android:paddingTop="@dimen/padding_Item_Book"
        android:text="@string/label_title"
        android:textSize="@dimen/text_size_item_book" />

    <TextView
        android:id="@+id/tvItemAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_Item_Book"
        android:paddingLeft="@dimen/padding_Item_Book"
        android:paddingRight="@dimen/padding_Item_Book"
        android:text="@string/label_author"
        android:textSize="15sp" />

</LinearLayout>